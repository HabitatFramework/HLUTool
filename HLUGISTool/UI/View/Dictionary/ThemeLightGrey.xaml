                                               Grid.RowSpan="2"
                                               Grid.ColumnSpan="2"
                                               Fill="#66808080"
                                               Stretch="Fill" />
                                    <Rectangle x:Name="BackgroundGradient"
                                               Grid.RowSpan="2"
                                               Grid.ColumnSpan="2"
                                               Opacity="0"
                                               Stretch="Fill">
                                        <Rectangle.Fill>
                                            <LinearGradientBrush StartPoint=".7,0" EndPoint=".7,1">
