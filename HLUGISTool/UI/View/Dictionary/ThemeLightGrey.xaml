                        <Trigger Property="IsVisible" Value="True">
                            <Setter Property="Validation.ErrorTemplate" Value="{StaticResource ErrorTemplate}" />
                        </Trigger>
                        <!--  HT End  -->
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
