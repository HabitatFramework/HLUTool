                                                                      Mode=TwoWay,
                                                                      UpdateSourceTrigger=PropertyChanged}" />

                                        <Label x:Name="LabelIncidSource3HabitatType"
                                               Grid.Row="3"
                                               Grid.Column="0"
											   Grid.ColumnSpan="2"
                                               Margin="0,0,0,2"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               Content="Habitat Type" />

                                        <ComboBox x:Name="ComboBoxIncidSource3HabitatType"
