			                                    Margin="4,8,4,8"
												HorizontalAlignment="Center"
												VerticalAlignment="Center"
												IsChecked="{Binding BulkDeleteSecondaryCodes}" />

									<Label x:Name="LabelBulkCreateHistory"
											Grid.Row="2"
											Grid.Column="3"
											Margin="4,0,4,0"
											HorizontalAlignment="Right"
											VerticalAlignment="Center" Content="Create History Records"/>
									<CheckBox x:Name="CheckBoxBulkCreateHistory"
												Grid.Row="2"
												Grid.Column="4"
												Margin="4,8,4,8"
												HorizontalAlignment="Center"
												VerticalAlignment="Center"
												IsChecked="{Binding BulkCreateHistoryRecords}" />

								</Grid>

							</Grid>
						</GroupBox>

