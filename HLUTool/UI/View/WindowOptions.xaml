												   Margin="4,0,4,0"
												   HorizontalAlignment="Right"
												   VerticalAlignment="Center" Content="Priority Interpretation Quality"/>
											<ComboBox x:Name="ComboBoxInterpretationQuality"
													  Grid.Column="1"
													  Margin="4,8,4,8"
													  BorderThickness="1"
					                                  DisplayMemberPath="description"
													  ItemsSource="{Binding BulkInterpretationQualityCodes}"
													  SelectedValue="{Binding BulkInterpretationQuality, ValidatesOnDataErrors=True}"
													  SelectedValuePath="code"
													  Tag="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors).CurrentItem.ErrorContent, Mode=OneWay, Converter={StaticResource errorMessageConverter}}" />
										</Grid>

