                <Button x:Name="ButtonCancel"
                        Grid.Column="2"
                        Margin="2,0,0,0"
                        Command="{Binding CancelCommand}"
                        IsCancel="True" Content="_Cancel"/>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
