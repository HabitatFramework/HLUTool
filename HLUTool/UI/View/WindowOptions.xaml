										<RowDefinition Height="Auto" />
										<RowDefinition Height="Auto" />
										<RowDefinition Height="Auto" />
									</Grid.RowDefinitions>

									<Label x:Name="LabelBulkDeleteOrphanBapHabitats"
											Grid.Row="0"
											Grid.Column="0"
											Margin="4,0,4,0"
											HorizontalAlignment="Right"
											VerticalAlignment="Center" Content="Delete Orphan Priority Habitats"/>
									<CheckBox x:Name="CheckBoxBulkDeleteOrphanBapHabitats"
												Grid.Row="0"
												Grid.Column="1"
												Margin="4,8,4,8"
												HorizontalAlignment="Center"
												VerticalAlignment="Center"
												IsChecked="{Binding BulkDeleteOrphanBapHabitats}" />

									<Label x:Name="LabelBulkDeletePotentialBapHabitats"
											Grid.Row="0"
											Grid.Column="3"
											Margin="4,0,4,0"
											HorizontalAlignment="Right"
											VerticalAlignment="Center" Content="Delete Potential Priority Habitats"/>
