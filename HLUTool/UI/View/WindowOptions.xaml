<Window x:Class="HLU.UI.View.WindowOptions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hlu="clr-namespace:HLU.UI.UserControls;assembly="
        Title="{Binding WindowTitle}"
        Width="600"
        Height="Auto"
        Icon="..\..\Icons\HLUIcon.png"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        SizeToContent="Height"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary\NullableValueConverterDictionary.xaml" />
                <ResourceDictionary Source="Dictionary\ErrorMessageConverterDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <DockPanel Width="Auto"
               Margin="0,0,0,0"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch">

        <Grid x:Name="GridMain" Margin="4,2,4,4">
            <Grid.RowDefinitions>
                <RowDefinition Height="325" />
                <RowDefinition Height="4" />
                <RowDefinition Height="23" />
            </Grid.RowDefinitions>

            <TabControl x:Name="TabControlData"
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,2,0,0">

                <!--  Database  -->

                <TabItem x:Name="TabDatabase"
                         Height="29.29"
                         VerticalAlignment="Bottom"
                         IsEnabled="True">

                    <TabItem.Header>
                        <StackPanel>
                            <Label x:Name="DatabaseTabLabel"
                                   Margin="2,0,2,0"
                                   VerticalAlignment="Bottom"
                                   Content="Database"
                                   FontSize="13"
                                   Padding="4,2,4,4"
                                   ToolTipService.ShowOnDisabled="True" />
                        </StackPanel>
                    </TabItem.Header>

                    <AdornerDecorator>
                        <ScrollViewer VerticalScrollBarVisibility="Auto">


                <GroupBox x:Name="GroupBoxDatabase"
                          Height="Auto"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Header="Database Options">
                    <Grid Margin="2,4,4,2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="70" />
                        </Grid.ColumnDefinitions>
                        <Label x:Name="LabelConnectionTimeout"
                               Grid.Row="0"
                               Grid.Column="0"
                               Margin="4,0,4,0"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center" Content="Timeout [secs]"/>
                        <TextBox x:Name="TextBoxConnectionTimeout"
                                 Grid.Row="0"
                                 Grid.Column="1"
                                 Margin="4,8,4,8"
                                 VerticalAlignment="Center"
                                 BorderThickness="1"
                                 Text="{Binding DbConnectionTimeout, Converter={StaticResource nullableValueConverter}, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                 Tag="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors).CurrentItem.ErrorContent, Mode=OneWay, Converter={StaticResource errorMessageConverter}}" 
                                 TextAlignment="Right" />

                        <Label x:Name="LabelIncidPageSize"
                               Grid.Row="0"
                               Grid.Column="2"
                               Margin="4,0,4,0"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center" Content="Incid Table Page Size [rows]"/>
                        <TextBox x:Name="TextBoxIncidPageSize"
                                 Grid.Row="0"
                                 Grid.Column="3"
                                 Margin="4,8,4,8"
                                 VerticalAlignment="Center"
                                 BorderThickness="1"
                                 Text="{Binding IncidTablePageSize, Converter={StaticResource nullableValueConverter}, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                 Tag="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors).CurrentItem.ErrorContent, Mode=OneWay, Converter={StaticResource errorMessageConverter}}" 
                                 TextAlignment="Right" />

                    </Grid>
                </GroupBox>

                        </ScrollViewer>
                    </AdornerDecorator>
        		</TabItem>

                <TabItem x:Name="TabGIS"
                         Height="29.29"
                         VerticalAlignment="Bottom"
                         IsEnabled="True">

                    <TabItem.Header>
                        <StackPanel>
                            <Label x:Name="GISTabLabel"
                                   Margin="2,0,2,0"
                                   VerticalAlignment="Bottom"
                                   Content="GIS/Export"
                                   FontSize="13"
                                   Padding="4,2,4,4"
                                   ToolTipService.ShowOnDisabled="True" />
                        </StackPanel>
                    </TabItem.Header>

                    <AdornerDecorator>
                        <ScrollViewer VerticalScrollBarVisibility="Auto">

                    <Grid x:Name="GridTabGIS">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

						<GroupBox x:Name="GroupBoxGis"
								  HorizontalAlignment="Stretch"
								  VerticalAlignment="Stretch"
								  Header="GIS Options">
							<Grid Margin="2,4,4,2">
								<Grid.RowDefinitions>
									<RowDefinition Height="Auto" />
									<RowDefinition Height="Auto" />
									<RowDefinition Height="Auto" />
								</Grid.RowDefinitions>

								<Grid x:Name="GridGisApp"
									  Grid.Row="0"
									  Grid.Column="0"
									  Margin="8,0,0,0">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="*" />
										<ColumnDefinition Width="Auto" MinWidth="110" />
									</Grid.ColumnDefinitions>
									<Label x:Name="LabelPreferredGis"
										   Grid.Row="0"
										   Grid.Column="0"
										   Margin="4,0,4,0"
										   HorizontalAlignment="Right"
										   VerticalAlignment="Center" Content="Preferred GIS Application"/>
									<ComboBox x:Name="ComboBoxPreferredGis"
											  Grid.Row="0"
											  Grid.Column="1"
											  Margin="4,8,4,8"
											  BorderThickness="1"
											  IsEnabled="{Binding GisAppsEnabled}"
											  ItemsSource="{Binding GisApps}"
											  SelectedValue="{Binding PreferredGis, ValidatesOnDataErrors=True}"
											  Tag="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors).CurrentItem.ErrorContent, Mode=OneWay, Converter={StaticResource errorMessageConverter}}" />

								</Grid>

								<Grid x:Name="GridMapPath"
									  Grid.Row="1">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="170" />
										<ColumnDefinition Width="*" />
										<ColumnDefinition Width="30" />
									</Grid.ColumnDefinitions>

										<Label x:Name="LabelMapPath"
											   Grid.Column="0"
											   Margin="4,0,4,0"
											   HorizontalAlignment="Right"
											   VerticalAlignment="Center" Content="Map Document/Workspace:"/>
										<TextBox x:Name="TextBoxMapPath"
													Grid.Column="1"
													Margin="4,8,4,8"
													BorderThickness="1"
													IsEnabled="False"
													Text="{Binding MapDocument, ValidatesOnDataErrors=True}"
													Tag="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors).CurrentItem.ErrorContent, Mode=OneWay, Converter={StaticResource errorMessageConverter}}" 
													TextAlignment="Left"
													ToolTip="{Binding MapPath}"
													ToolTipService.ShowOnDisabled="True" />
										<Button x:Name="ButtonBrowseMap"
												Grid.Column="2"
												Margin="0,8,4,8"
												Command="{Binding BrowseMapPathCommand}"
												Content="..."
												IsEnabled="{Binding CanBrowseMapPath}" />

								</Grid>

								<Grid x:Name="GridMinAutoZoom"
									  Grid.Row="2">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="*" />
										<ColumnDefinition Width="70" />
									</Grid.ColumnDefinitions>

									<Label x:Name="LabelMinAutoZoom"
										   Grid.Column="0"
										   Margin="4,0,4,0"
										   HorizontalAlignment="Right"
										   VerticalAlignment="Center" Content="{Binding MinAutoZoomText}"/>
									<TextBox x:Name="TextBoxMinAutoZoom"
											 Grid.Column="1"
											 Margin="4,8,4,8"
											 BorderThickness="1"
											 Text="{Binding MinAutoZoom, Converter={StaticResource nullableValueConverter}, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
											 Tag="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors).CurrentItem.ErrorContent, Mode=OneWay, Converter={StaticResource errorMessageConverter}}" 
											 TextAlignment="Right" />
								</Grid>

							</Grid>
						</GroupBox>

						<GroupBox x:Name="GroupBoxExport"
								  HorizontalAlignment="Stretch"
								  VerticalAlignment="Stretch"
								  Header="Export Options"
								  Grid.Row="2">
							<Grid Margin="2,4,4,2">
								<Grid.RowDefinitions>
									<RowDefinition Height="Auto" />
								</Grid.RowDefinitions>

								<Grid x:Name="GridExportPath"
									  Grid.Row="2">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="160" />
										<ColumnDefinition Width="*" />
										<ColumnDefinition Width="30" />
									</Grid.ColumnDefinitions>

									<Label x:Name="LabelExportPath"
										   Grid.Column="0"
										   Margin="4,0,4,0"
										   HorizontalAlignment="Right"
										   VerticalAlignment="Center" Content="Default Export Directory:"/>
									<TextBox x:Name="TextBoxExportPath"
											 Grid.Column="1"
											 Margin="4,8,4,8"
											 BorderThickness="1"
											 IsEnabled="False"
											 Text="{Binding ExportPath, ValidatesOnDataErrors=True}"
											 Tag="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors).CurrentItem.ErrorContent, Mode=OneWay, Converter={StaticResource errorMessageConverter}}" 
											 TextAlignment="Left"
											 ToolTip="{Binding ExportPath}"
											 ToolTipService.ShowOnDisabled="True" />
									<Button x:Name="ButtonBrowseExportPath"
											Grid.Column="2"
											Margin="0,8,4,8"
											Command="{Binding BrowseExportPathCommand}"
											Content="..."
											IsEnabled="{Binding CanBrowseExportPath}" />
								</Grid>

								</Grid>
						</GroupBox>

                        </Grid>

                        </ScrollViewer>
                    </AdornerDecorator>

        		</TabItem>

                <TabItem x:Name="TabHistory"
                         Height="29.29"
                         VerticalAlignment="Bottom"
                         GotFocus="TabHistory_GotFocus"
                         IsEnabled="True">

                    <TabItem.Header>
                        <StackPanel>
                            <Label x:Name="HistoryTabLabel"
                                   Margin="2,0,2,0"
                                   VerticalAlignment="Bottom"
                                   Content="History"
                                   FontSize="13"
                                   Padding="4,2,4,4"
                                   ToolTipService.ShowOnDisabled="True" />
                        </StackPanel>
                    </TabItem.Header>

                    <AdornerDecorator>
                        <ScrollViewer VerticalScrollBarVisibility="Auto">

                <GroupBox x:Name="GroupBoxHistory"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Header="History Options">
                    <Grid Margin="2,4,4,2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" MinHeight="110" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid x:Name="GridHistoryColumns"
                              Grid.Row="0"
                              Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            <Label x:Name="LabelHistoryColumns1"
                                   Grid.Row="0"
                                   Grid.Column="0"
                                   Margin="4,0,4,0"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Top">
                                <TextBlock HorizontalAlignment="Right"
                                           Text="History Display Columns" />
                            </Label>

                            <ListBox x:Name="ListBoxHistoryColumns"
                                     Grid.Row="0"
                                     Grid.Column="1"
                                     Margin="4,8,4,8"
                                     BorderBrush="Black"
                                     BorderThickness="1"
                                     ItemsSource="{Binding HistoryColumns}"
                                     Padding="2"
                                     SelectionMode="Extended">

                                <ListBox.ItemContainerStyle>
                                    <Style>
                                        <Setter Property="ListBoxItem.Background" Value="Transparent" />
                                        <Setter Property="ListBoxItem.Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                                    <Border x:Name="Bd"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            Padding="{TemplateBinding Padding}"
                                                            SnapsToDevicePixels="true">
                                                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsSelected" Value="true">
                                                            <Setter TargetName="Bd" Property="Background" Value="Transparent" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Item, Mode=TwoWay}" IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>

                        <Grid x:Name="GridHistoryRows"
                              Grid.Row="1"
                              Grid.Column="0"
							  Grid.ColumnSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="70" />
                            </Grid.ColumnDefinitions>

                        <Label x:Name="LabelHistoryDisplayLastN"
                               Grid.Row="0"
                               Grid.Column="0"
                               Margin="4,0,4,0"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center" Content="Display History Rows"/>
                        <TextBox x:Name="TextBoxHistoryDisplayLastN"
                                 Grid.Row="0"
                                 Grid.Column="1"
                                 Grid.ColumnSpan="2"
                                 Margin="4,8,4,8"
                                 VerticalAlignment="Center"
                                 BorderThickness="1"
                                 Text="{Binding HistoryDisplayLastN, Converter={StaticResource nullableValueConverter}, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                 Tag="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors).CurrentItem.ErrorContent, Mode=OneWay, Converter={StaticResource errorMessageConverter}}" 
                                 TextAlignment="Right" />
                        </Grid>

                    </Grid>
                </GroupBox>

                        </ScrollViewer>
                    </AdornerDecorator>

        		</TabItem>

                <TabItem x:Name="TabInterface"
                         Height="29.29"
                         VerticalAlignment="Bottom"
                         IsEnabled="True">

                    <TabItem.Header>
                        <StackPanel>
                            <Label x:Name="InterfaceTabLabel"
                                   Margin="2,0,2,0"
                                   VerticalAlignment="Bottom"
                                   Content="Interface"
                                   FontSize="13"
                                   Padding="4,2,4,4"
                                   ToolTipService.ShowOnDisabled="True" />
                        </StackPanel>
                    </TabItem.Header>

                    <AdornerDecorator>
                        <ScrollViewer VerticalScrollBarVisibility="Auto">

                <GroupBox x:Name="GroupBoxInterface"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Header="Interface Options">
                    <Grid Margin="2,4,4,2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid x:Name="GridPreferredHabitatClass" Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" MinWidth="360" />
                            </Grid.ColumnDefinitions>

                            <Label x:Name="LabelPreferredHabitatClass"
                                   Grid.Column="0"
                                   Margin="4,0,4,0"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center" Content="Preferred Habitat Class"/>
                            <ComboBox x:Name="ComboBoxPreferredHabitatClass"
                                      Grid.Column="1"
                                      Margin="4,8,4,8"
                                      BorderThickness="1"
                                      DisplayMemberPath="description"
                                      ItemsSource="{Binding HabitatClassCodes}"
                                      SelectedValue="{Binding PreferredHabitatClass, ValidatesOnDataErrors=True}"
                                      Tag="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors).CurrentItem.ErrorContent, Mode=OneWay, Converter={StaticResource errorMessageConverter}}" 
                                      SelectedValuePath="code" />

                        </Grid>

                        <Grid x:Name="GridShowOptions1" Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="25" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="25" />
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="25" />
                            </Grid.ColumnDefinitions>

                            <Label x:Name="LabelShowGroupHeaders"
                                   Grid.Column="0"
                                   Margin="4,0,4,0"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center" Content="Show Group Headers"/>
                            <CheckBox x:Name="CheckBoxShowGroupHeaders"
                                      Grid.Column="1"
									  Margin="4,8,4,8"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      IsChecked="{Binding ShowGroupHeaders}" />
                            <Label x:Name="LabelShowIHSTab"
                                   Grid.Column="2"
                                   Margin="4,0,4,0"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center" Content="Show IHS Tab"/>
                            <CheckBox x:Name="CheckBoxShowIHSTab"
                                      Grid.Column="3"
									  Margin="4,8,4,8"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      IsChecked="{Binding ShowIHSTab}" />
                            <Label x:Name="LabelShowSourceHabitatGroup"
                                   Grid.Column="5"
                                   Margin="4,0,4,0"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center" Content="Show Source Habitat"/>
                            <CheckBox x:Name="CheckBoxShowSourceHabitatGroup"
                                      Grid.Column="6"
									  Margin="4,8,4,8"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      IsChecked="{Binding ShowSourceHabitatGroup}" />
                        </Grid>

                        <Grid x:Name="GridShowOptions2" Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="25" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="25" />
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="25" />
                            </Grid.ColumnDefinitions>

                            <Label x:Name="LabelShowHabitatSuggestions"
                                   Grid.Column="0"
                                   Margin="4,0,4,0"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center" Content="Show Habitat Suggestions"/>
                            <CheckBox x:Name="CheckBoxShowHabitatSuggestions"
                                      Grid.Column="1"
									  Margin="4,8,4,8"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      IsChecked="{Binding ShowHabitatSuggestions}" />
                            <Label x:Name="LabelShowNVCCodes"
                                   Grid.Column="2"
                                   Margin="4,0,4,0"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center" Content="Show NVC Codes"/>
                            <CheckBox x:Name="CheckBoxShowNVCCodes"
                                      Grid.Column="3"
									  Margin="4,8,4,8"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      IsChecked="{Binding ShowNVCCodes}" />
                            <Label x:Name="LabelShowHabitatSummary"
                                   Grid.Column="5"
                                   Margin="4,0,4,0"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center" Content="Show Habitat Summary"/>
                            <CheckBox x:Name="CheckBoxShowHabitatSummary"
                                      Grid.Column="6"
									  Margin="4,8,4,8"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      IsChecked="{Binding ShowHabitatSummary}" />
                        </Grid>

                        <Grid x:Name="GridShowOSMMUpdateOptions" Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" MinWidth="160" />
                            </Grid.ColumnDefinitions>

                            <Label x:Name="LabelShowOSMMUpdateOptions"
                                   Grid.Column="0"
                                   Margin="4,0,4,0"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center" Content="Show OSMM Update Attributes"/>
                            <ComboBox x:Name="ComboBoxShowOSMMUpdateOptions"
                                      Grid.Column="1"
                                      Margin="4,8,4,8"
                                      BorderThickness="1"
                                      ItemsSource="{Binding ShowOSMMUpdatesOptions}"
                                      SelectedValue="{Binding ShowOSMMUpdatesOption, ValidatesOnDataErrors=True}"
                                      Tag="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors).CurrentItem.ErrorContent, Mode=OneWay, Converter={StaticResource errorMessageConverter}}" />

                        </Grid>

                        <Grid x:Name="GridPreferredSecondaryGroup" Grid.Row="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" MinWidth="200" />
                            </Grid.ColumnDefinitions>

                            <Label x:Name="LabelPreferredSecondaryGroup"
                                   Grid.Column="0"
                                   Margin="4,0,4,0"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center" Content="Preferred Secondary Group"/>
                            <ComboBox x:Name="ComboBoxPreferredSecondaryGroup"
                                      Grid.Column="1"
                                      Margin="4,8,4,8"
                                      BorderThickness="1"
                                      DisplayMemberPath="description"
                                      ItemsSource="{Binding SecondaryGroupCodes}"
                                      SelectedValue="{Binding PreferredSecondaryGroup, ValidatesOnDataErrors=True}"
                                      Tag="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors).CurrentItem.ErrorContent, Mode=OneWay, Converter={StaticResource errorMessageConverter}}" 
                                      SelectedValuePath="code" />

                        </Grid>

                        <Grid x:Name="GridSecondaryCodeDelimiter" Grid.Row="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" MinWidth="160" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="40" />
                            </Grid.ColumnDefinitions>

                            <Label x:Name="LabelSecondaryCodeOrder"
                                   Grid.Column="0"
                                   Margin="4,0,4,0"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center" Content="Secondary Group Table Order"/>
                            <ComboBox x:Name="ComboBoxSecondaryCodeOrder"
                                      Grid.Column="1"
                                      Margin="4,8,4,8"
                                      BorderThickness="1"
                                      ItemsSource="{Binding SecondaryCodeOrderOptions}"
                                      SelectedValue="{Binding SecondaryCodeOrder, ValidatesOnDataErrors=True}"
                                      Tag="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors).CurrentItem.ErrorContent, Mode=OneWay, Converter={StaticResource errorMessageConverter}}" />
                            <Label x:Name="LabelSecondaryCodeDelimiter"
                                   Grid.Column="2"
                                   Margin="4,0,4,0"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center" Content="Secondary Code Delimiter"/>
                            <TextBox x:Name="TextBoxSecondaryCodeSeparatorDelimiter"
                                     Grid.Column="3"
                                     Margin="4,8,4,8"
                                     VerticalAlignment="Center"
                                     BorderThickness="1"
                                     Text="{Binding SecondaryCodeDelimiter, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                     Tag="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors).CurrentItem.ErrorContent, Mode=OneWay, Converter={StaticResource errorMessageConverter}}" 
                                     TextAlignment="Center" />
                        </Grid>

                    </Grid>
                </GroupBox>

                        </ScrollViewer>
                    </AdornerDecorator>

        		</TabItem>

                <TabItem x:Name="TabUpdates"
                         Height="29.29"
                         VerticalAlignment="Bottom"
                         IsEnabled="True">

                    <TabItem.Header>
                        <StackPanel>
                            <Label x:Name="UpdatesTabLabel"
                                   Margin="2,0,2,0"
                                   VerticalAlignment="Bottom"
                                   Content="Updates"
                                   FontSize="13"
                                   Padding="4,2,4,4"
                                   ToolTipService.ShowOnDisabled="True" />
                        </StackPanel>
                    </TabItem.Header>

                    <AdornerDecorator>
                        <ScrollViewer VerticalScrollBarVisibility="Auto">

                <GroupBox x:Name="GroupBoxUpdates"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Header="Updates Options">
                    <Grid Margin="2,4,4,2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid x:Name="GridSubsetUpdateAction" Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" MinWidth="110" />
                            </Grid.ColumnDefinitions>

                            <Label x:Name="LabelSubsetUpdateAction"
                                   Grid.Row="0"
                                   Grid.Column="0"
                                   Margin="4,0,4,0"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center" Content="Action To Take When Updating Incid Subset"/>
                            <ComboBox x:Name="ComboBoxSubsetUpdateAction"
                                      Grid.Row="0"
                                      Grid.Column="1"
                                      Margin="4,8,4,8"
                                      BorderThickness="1"
                                      ItemsSource="{Binding SubsetUpdateActions}"
                                      SelectedValue="{Binding SubsetUpdateAction, ValidatesOnDataErrors=True}"
                                      Tag="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors).CurrentItem.ErrorContent, Mode=OneWay, Converter={StaticResource errorMessageConverter}}" />

                        </Grid>

                        <Grid x:Name="GridIHSUpdateAction" Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" MinWidth="330" />
                            </Grid.ColumnDefinitions>

