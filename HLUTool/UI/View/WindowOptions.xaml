                            <Label x:Name="LabelSqlPath"
                                   Grid.Row="1"
                                   Grid.Column="0"
                                   Margin="4,0,4,0"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center" Content="Default Query Directory:"/>
